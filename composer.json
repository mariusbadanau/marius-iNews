{
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4",
        "composer/installers": "1.*",
        "johnpbloch/wordpress": "4.5.2",
        "wpackagist-theme/news-mix-lite":"2.0.6",
        "wpackagist-theme/sportsmag":"1.1.1",
        "wpackagist-plugin/accesspress-social-icons":"1.5.3"

   
        
    },

"require-dev": {
         "wpackagist-plugin/debug-bar": "~0.8",
        "wpackagist-plugin/debug-bar-console": "~0.3",
          "phpunit/phpunit":"5.4.2",
          "squizlabs/php_codesniffer":"2.6.1",
          "phploc/phploc":"3.0.1",
          "czproject/phpdepend":"1.0.6",
          "phpmd/phpmd":"2.4.3",
          "sebastian/phpcpd":"2.0.4"

       
    },

    "minimum-stability": "dev",

    
    "extra": {
        "wordpress-install-dir": "wordpress",
        "installer-paths": {
            "wordpress/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "wordpress/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wordpress/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}